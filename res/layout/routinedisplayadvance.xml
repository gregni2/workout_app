<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
      
    <LinearLayout
       android:id="@+id/linearLayoutMainArea"
       android:layout_width="fill_parent"
   	   android:layout_height="wrap_content"
       android:gravity="left|top"
       android:orientation="vertical">
	
	    <LinearLayout
	       android:id="@+id/linearLayoutClockArea"
	       android:layout_width="match_parent"
	       android:layout_height="0dip"
	       android:paddingTop="5dip"
	       android:paddingBottom="5dip"
	       android:layout_weight="1"
	       android:gravity="center" >
		 	 
	     <TextView
		        android:id="@+id/statusText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		       	android:paddingRight="10dp"
		        android:text="@string/active_time" />
		
		   <TextView
		        android:id="@+id/clockText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="@string/clock_text" />
	   </LinearLayout>
	   
	   <LinearLayout
	       android:id="@+id/linearLayoutPictureArea"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:gravity="center">
	    
	       <Button
	             android:id="@+id/left_arrow_button"
	             style="@style/ForwardAndBackButton"
	           	 android:drawableTop="@drawable/previous_button" />
	     
	       <ImageView
		        android:id="@+id/exercise_piture"
		        android:layout_width="180dp"
		        android:layout_height="200dp"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp"
		        android:src="@drawable/selectorofficeworkout" 
		        android:contentDescription="@string/exercise_picture"/>
	
	       <Button
	             android:id="@+id/right_arrow_button"
	             style="@style/ForwardAndBackButton"
	           	 android:drawableTop="@drawable/skip_button"
	           	  android:text="@string/latest_workout" />
	            
	   </LinearLayout>
	        
	    <TextView
		       android:id="@+id/exercise_title"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:gravity="center"
		       android:text="@string/exercise_title_text"
		       android:textSize="18sp" />
	    
	    <LinearLayout
	       android:id="@+id/linearLayoutTitleDescription"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="5dip"
	       android:gravity="left">
	       
		   <TextView
		       android:id="@+id/exercise_number"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:gravity="left"
		       android:layout_marginRight="10dip"
		       android:text="@string/exercise_number_text"
		       android:textSize="16sp" />
		   
			<TextView
		       android:id="@+id/repText"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       
		       android:text="@string/reps_text"
		       android:textSize="16sp" />
	    </LinearLayout> 
	   
	   <TextView
	       android:id="@+id/text_description"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="5dip"
	       android:gravity="left|top"
	       android:text="@string/text_description"
	       android:textSize="14sp" />
	  
	   
	</LinearLayout>
	
    <LinearLayout
       android:id="@+id/linearLayoutButtons"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/linearLayoutMainArea"
       android:layout_alignParentBottom="true"
       android:gravity="center|bottom">

       <Button
            android:id="@+id/pause_explain_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
	        android:text="@string/pause_explain_button_text" />
  
 	   <Spinner
        	android:id="@+id/voice_dropdown"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="12sp" />
 	   
 	 
        
    </LinearLayout>

</RelativeLayout>