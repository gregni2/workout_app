<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <LinearLayout
       android:id="@+id/linearLayoutClockArea"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center" >
	    
	   <TextView
	        android:id="@+id/statusText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:textSize="38sp"
	       	android:paddingRight="10dp"
	        android:text="@string/active_time" />
	
	   <TextView
	        android:id="@+id/clockText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:textSize="46sp"
	        android:paddingRight="10dp"
	        android:text="@string/clock_text" />

   </LinearLayout>
   
   <LinearLayout
       android:id="@+id/linearLayoutPictureArea"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:gravity="center">

       <Button
           android:id="@+id/left_arrow_button"
           android:layout_width="85dp"
           android:layout_height="83dp"
           android:layout_gravity="center|center_horizontal"
           android:background="@drawable/leftarrow" />
     
       <ImageView
	        android:id="@+id/exercise_piture"
	        android:layout_width="310dp"
	        android:layout_height="340dp"
	        android:src="@drawable/selectorofficeworkout" android:contentDescription="@string/exercise_picture"/>

       <Button
             android:id="@+id/right_arrow_button"
             android:layout_width="85dp"
             android:layout_height="83dp"
             android:background="@drawable/rightarrow" />
   </LinearLayout>

      <TextView
	       android:id="@+id/exercise_title"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_marginRight="8dip"
	       android:gravity="center"
	       android:text="@string/exercise_title_text"
	       android:textSize="28sp" />
	   
	
    <LinearLayout
       android:id="@+id/linearLayoutTitleDescription"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:layout_marginLeft="5dip"
       android:gravity="center">

	   <TextView
	       android:id="@+id/exercise_number"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       
	       android:layout_marginRight="8dip"
	       android:text="@string/exercise_number_text"
	       android:textSize="26sp" />
	   
		<TextView
	       android:id="@+id/repText"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       
	       android:text="@string/reps_text"
	       android:textSize="28sp" />
    </LinearLayout> 
   
   <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:textSize="24sp"
        android:text="@string/text_description"/>
  
    <LinearLayout
        android:id="@+id/linearLayoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal" >
        
 	  <TextView
	       android:id="@+id/deleteME"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="LARGEVIEW"
	       android:textSize="8sp" />
       <Button
            android:id="@+id/pause_explain_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="5dp"
	        android:text="@string/pause_explain_button_text" />
  
 	   <Spinner
        	android:id="@+id/voice_dropdown"
        	android:textSize="24sp"
        	android:layout_margin="5dp"
	        android:layout_width="wrap_content"
        	android:layout_height="wrap_content" />
 	   
 	  
    </LinearLayout>

</LinearLayout>